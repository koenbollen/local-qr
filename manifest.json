{
  "manifest_version": 2,
  "name": "Local QR",
  "version": "0.0.1",
  "author": "Koen Bollen <meneer@koenbollen.nl> & Jesse Dijkstra <mail@jessedijkstra.nl>",

  "description": "A plain & simple QR-Code generator that doesn't use a web-services.",
  "icons": {
    "128": "icon128.png"
  },

  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "Plain Local QR-Code",    
    "default_popup": "popup.html"      
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Shift+Alt+Q",
        "mac": "Shift+Alt+Q",
        "chromeos": "Shift+Alt+Q",
        "linux": "Shift+Alt+Q"
      }
    }
  },

  "offline_enabled": true
}